//Js:
function soma() {
var num1 = Number(document.getElementById('num1').value);
var num2 = Number(document.getElementById('num2').value);
var soma = num1 + num2;

	document.getElementById("result").innerHTML = 'Valor da soma Ã©:' + soma;
}		
//Html:
<input type="number" id="num1">
<input type="number" id="num2">
<button type="button" onclick="soma()">Clique para somar  </button>

<p id="result"></p>
